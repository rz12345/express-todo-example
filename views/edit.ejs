<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1><%= title %></h1>
    <form action="/create" method="post">
      <input type="text" name="content" placeholder="write somethings todo..." /> <input type="submit" value="Submit"/>
    </form>    
    <hr/>
    <% todos.forEach(function(todo){ %>    
    <p>
    <% if(todo._id == current ){ %>
      <form action="/update/<%= todo._id %>" method="post">
        <input type="text" name="content" value="<%= todo.content %>" /> <input type="submit" value="OK"/>
      </form>
      <% } else { %>
      <%= todo.content %>
      <% }  %>
    </p>
    <% }); %>
  </body>
</html>
